APP_NAME="FastAPI Clean Architecture"
ENV="dev"
ENABLE_DOCS=true
LANG="en" # en|ru
API_PREFIX="/api"

# Security
SECRET_KEY="dev-secret-change-me"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRES_MIN=15
REFRESH_TOKEN_EXPIRES_DAYS=30
TOKEN_ISSUER=
TOKEN_AUDIENCE=
REQUIRE_HTTPS=false

# Database (optional)
# Option A: provide full SQLAlchemy URL
# DATABASE_URL="postgresql+psycopg://postgres:postgres@localhost:5432/appdb"
# Option B: provide parts (used if DATABASE_URL is empty)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=appdb
DB_DRIVER=postgresql+psycopg
DB_ECHO=false

# Redis (optional)
# Option A: full URL
# For local dev with docker-compose: redis://localhost:6379/0
# For in-network services (inside compose): redis://redis:6379/0
REDIS_URL=
# Option B: provide parts (used if REDIS_URL is empty)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=
